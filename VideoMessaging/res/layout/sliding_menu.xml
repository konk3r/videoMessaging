<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/side_menu_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_compat_height"
        android:background="@color/actionbar_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/actionbar_compat_height"
            android:layout_height="@dimen/actionbar_compat_height"
            android:contentDescription="@string/user_picture"
            android:src="@drawable/empty_contact" />

        <TextView
            android:id="@+id/name"
            style="@style/ActionBarCompatTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View style="@style/HeaderDivider" />

    <Button
        style="@style/SideMenuButton"
        android:id="@+id/sign_out"
        android:text="@string/menu_sign_out" />

    <View style="@style/Divider" />

    <Button
        style="@style/SideMenuButton"
        android:id="@+id/change_password"
        android:text="@string/menu_change_password" />

    <View style="@style/Divider" />

    <Button
        style="@style/SideMenuButton"
        android:id="@+id/change_name"
        android:text="@string/menu_change_name" />

</LinearLayout>